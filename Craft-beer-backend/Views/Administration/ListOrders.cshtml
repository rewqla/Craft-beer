@model List<OrderShortInfoViewModel>

<div class="container mt-5">

    <div id="ordersList">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Customer</th>
                    <th>Status</th>
                    <th>Unique Code</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Customer</td>
                        <td>@order.Status</td>
                        <td>@order.UniqueCode</td>
                        <td>@order.Date</td>
                        <td>
                            <a class="btn btn-primary" href="@Url.Action("OrderDetails", "Administration", new { uniqueCode = @order.UniqueCode })">Переглянути</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
