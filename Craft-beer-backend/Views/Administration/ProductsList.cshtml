@using Craft_beer_backend.ViewModels

@model IEnumerable<FullProductViewModel>

@{
    ViewBag.Title = "All products";
}

@{
    if (Model.Any())
    {
        <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateProduct" asp-controller="Administration">Add new product</a>
        foreach (var product in Model)
        {
            <div style="margin-bottom:50px;">
                <div class="card mb-3" style="width: 100%;">
                    <div class="card-header">
                        <h5 class="card-title">@product.Name</h5>
                    </div>
                </div>
                <div class="card-body">
                    <p>Id: @product.Id</p>
                    <p>Price: @product.Price</p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" asp-action="EditProduct" asp-route-id="@product.Id">Edit</a>
                    <a asp-action="DeleteProduct" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card ">
            <div class="card-header"> Ще не створено продуктів </div>
            <div class=" card - body ">
                <h5 class="card-title"> Скористайтеся кнопкою нижче створити продукт</h5>
                <a class="btn btn-primary" style="width:auto" asp-action="CreateProduct">Створити продукт </a>
            </div>
        </div>
    }
}

