@model Craft_beer_backend.ViewModels.FullProductViewModel
@{
    ViewBag.Title = "Edit Product";
}
<h1>Edit Product</h1>
<form method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"> </div>
    <div class="mb-3">
        <label>Product Id</label>
        <input type="text" readonly asp-for="@Model.Id" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Name">Product name</label>
        <input type="text" asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Price">Price</label>
        <input type="text" asp-for="@Model.Price" class="form-control" />
        <span asp-validation-for="@Model.Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ImageUrl">ImageUrl</label>
        <input type="text" asp-for="@Model.ImageUrl" class="form-control" />
        <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Volume">Volume</label>
        <input type="text" asp-for="@Model.Volume" class="form-control" />
        <span asp-validation-for="@Model.Volume" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ShortDesc">Short Description</label>
        <input type="text" asp-for="@Model.ShortDesc" class="form-control" />
        <span asp-validation-for="@Model.ShortDesc" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Description">Description</label>
        <input type="text" asp-for="@Model.Description" class="form-control" />
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ABV">ABV</label>
        <input type="text" asp-for="@Model.ABV" class="form-control" />
        <span asp-validation-for="@Model.ABV" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Rating">Rating</label>
        <input type="text" asp-for="@Model.Rating" class="form-control" />
        <span asp-validation-for="@Model.Rating" class="text-danger"></span>
    </div>


    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ProductsList" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>