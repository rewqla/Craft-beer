@model OrderInfoViewModel

<div class="container">
    <h1 class="mt-5">Order Information</h1>

    <div class="mt-4">
        <p><strong>Unique Code:</strong> @Model.UniqueCode</p>
        <p><strong>Date:</strong> @Model.Date</p>
        <p><strong>Status:</strong> @Model.Status</p>
    </div>

    <div class="mt-4">
        <h2>Customer Information</h2>
        <p><strong>Name:</strong> @Model.Customer.FirstName @Model.Customer.LastName</p>
        <p><strong>Phone:</strong> @Model.Customer.Phone</p>
    </div>

    <div class="mt-4">
        <h2>Delivery Information</h2>
        <p><strong>City:</strong> @Model.Delivery.City</p>
        <p><strong>Address:</strong> @Model.Delivery.Address</p>
        <p><strong>Company:</strong> @Model.Delivery.Company</p>
    </div>

    <div class="mt-4">
        <h2>Order Items</h2>
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Volume</th>
                    <th>Count</th>
                    <th>Price</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Volume</td>
                        <td>@item.Count</td>
                        <td>@item.Price</td>
                        <td><img src="@item.Image" alt="Beer Image" width="100" height="100"></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
