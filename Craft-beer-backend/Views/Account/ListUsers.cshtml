@using Microsoft.AspNetCore.Identity
@model IEnumerable<Craft_beer_backend.Entities.DbUser>

@{ ViewBag.Title = "All Users";}



<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<h1>All Users</h1>

@if (Model.Any())
{
    foreach (var user in Model)
    {
        <div style="margin-bottom:50px;">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title">@user.UserName</h5>
                </div>
            </div>
            <div class="card-body">
                User Id: @user.Id
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditUser" asp-controller="Account" asp-route-id="@user.Id">Edit</a>
                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>

    }
}
else
{
    <div class="card ">
        <div class="card-header"> Ще не створено користувачів </div>
        <div class=" card - body ">
            <h5 class="card-title"> Скористайтеся кнопкою нижче щоб створити користувача</h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Account" asp-action="Register">Реєстрація</a>
        </div>
    </div>
}