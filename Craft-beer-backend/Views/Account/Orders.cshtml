@model List<OrderShortInfoViewModel>
<link href="/css/myorders.css" rel="stylesheet" />

<div class="wrap">
    <div class="content d-flex flex-column justify-content-center align-items-center">
        <div class="title w-50 m-2">
            <i class="fa-solid fa-truck-fast fa-2xl" style="color: #3E280E;"></i>
            <p class="text-uppercase">мої замовлення</p>
        </div>
        <div class="order-table w-50">
            <div class="head-row">
                <div><p>Унікальний код</p></div>
                <div><p>Дата</p></div>
                <div><p>Статус</p></div>
                <div><p>Дії</p></div>
            </div>
            @foreach (var order in Model)
            {
                <div class="order-row">
                    <div><p>@order.UniqueCode</p></div>
                    <div><p>@order.Date</p></div>
                    <div><p>@order.Status</p></div>
                    <div><a href="@Url.Action("OrderDetails", "Account", new { uniqueCode = @order.UniqueCode })">Переглянути</a></div>
                </div>
            }
        </div>
    </div>
</div>